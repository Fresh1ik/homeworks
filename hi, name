import tkinter as tk

def fg():
    text = entry.get()
    label = tk.Label(root2, text = ("Hi,", text), font=("Arial", 30))
    label.pack()




root2 = tk.Tk()
root2.geometry("500x500")
entry = tk.Entry(root2)
entry.pack()
button=tk.Button(root2, text = "Привітатись", command = fg)
button.pack()
root2.mainloop()
